@{
	ViewData["Tittle"] = "Categories list";
}


<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">List of Categories</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary">
				<i class="fas fa-plus"> Create new category</i>
			</a>
		</div>
	</div>

	<br />
	<br />

	<table id="tblCategory" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Order</th>
				<th>Actions</th>
			</tr>
		</thead>
	</table>

</div>

@section Scripts {
	<script src="~/js/Category.js"></script>
}